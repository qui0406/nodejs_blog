<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style:"width: 18rem;">
                <img src={{this.image}} class="card-img-top" alt={{this.image}}>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.discription}}</p>
                    <a href="#" class="btn btn-primary">Mua</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>